<body>

  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tdody>

    <% @books.last(7).each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td class="content"><%= link_to "Show", book_path(book) %></td>
        <td class="content"><%= link_to "Edit", edit_book_path(book) %></td>
        <td class="content"><%= link_to "Destroy", book_path(book), method: :delete %></td>
      </tr>
    <% end %>
    </tdody>
  </table>

  <h2>New book</h2>
  <%= form_with(model: @book, local: true) do |f| %>
    <% if @book.errors.any? %>
       <div class="error_explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
        <ul class="error-message">
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
       </ul>
      </div>
    <% end %>
    <%# エラーメッセージおわり %>
    <div class="field">
    <p>Title</p>
    <%= f.text_field :title %>
    </div>
    <div class="field">
    <p>Body</p>
    <%= f.text_area :body %>
    </div>
    <div class="field">
      <%= f.submit "Create Book" %>
    </div>
  <% end %>
</body>