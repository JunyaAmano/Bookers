<body>
  <h1>Editing Book</h1>
  
  <%= form_with model:@book, local:true do |f| %>
    <% if @book.errors.any? %>
     <div class="error_explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
       <ul class="error-message">
         <% @book.errors.full_messages.each do |message| %>
           <li><%= message %></li>
         <% end %>
         </ul>
      </div>
    <% end %>
    <div class="field">
    <p>Title</p>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <p>Body</p>
    <%= f.text_area :body %>
  </div>
  <div class="field"><%= f.submit "Update Book" %></div>
  <% end %>
  <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>   
</body>
